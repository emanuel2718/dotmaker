  {
    "telemetry": {
      "metrics": false,
      "diagnostics": false
    },
    "show_edit_predictions": true,
    "theme": "Gruvbox Dark Hard",
    "vim_mode": true,
    "vim": {
      "use_smartcase_find": true,
      "use_system_clipboard": "never"
    },
    "features": {
      "copilot": true
    },
    "wrap_guides": [
      80
    ],
    "use_autoclose": false,
    "buffer_font_family": "Berkeley Mono",
    "buffer_line_height": {
      "custom": 1.25
    },
    "ui_font_family": "Berkeley Mono",
    "ui_font_size": 14,
    "buffer_font_size": 14.0,
    "cursor_blink": false,
    "extend_comment_on_newline": false,
    "tab_bar": {
      "show": false,
      "show_nav_history_buttons": true,
      "show_tab_bar_buttons": true
    },
    "project_panel": {
      "dock": "right",
      "indent_size": 12,
      "scrollbar": {
        "show": "never"
      }
    },
    "base_keymap": "VSCode",
    "preview_tabs": {
      "enable_preview_from_code_navigation": false
    },
    "calls": {
      "mute_on_join": true
    },
    "languages": {
      "Markdown": {
        "preferred_line_length": 80
      },
      "JavaScript": {
        "tab_size": 2,
        "format_on_save": "prettier",
        "formatter": {
          "code_actions": {
            "source.fixAll.eslint": true,
            "source.organizeImports": true
          }
        }
      },
      "TypeScript": {
        "tab_size": 2,
        "format_on_save": "prettier",
        "formatter": {
          "code_actions": {
            "source.fixAll.eslint": true,
            "source.organizeImports": true
          }
        }
      },
      "Vue.js": {
        "tab_size": 2,
        "format_on_save": "prettier",
        "formatter": {
          "code_actions": {
            "source.fixAll.eslint": true,
            "source.organizeImports": true
          }
        }
      },
      "Rust": {
        "use_on_type_format": false
      }
    }
  }
