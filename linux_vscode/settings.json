{
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.timeout": 200,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.easymotion": true,
    "vim.handleKeys": {
        "<C-n>": true
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "leader",
                "f",
                "s"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": [
                "leader",
                "."
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "leader",
                "w",
                "d"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": [
                "leader",
                "w",
                "v"
            ],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        {
            "before": [
                "leader",
                "w",
                "s"
            ],
            "commands": [
                "workbench.action.splitEditorDown"
            ]
        },
        {
            "before": [
                "leader",
                "w",
                "l"
            ],
            "commands": [
                "workbench.action.navigateRight"
            ],
            "when": [
                "explorerViewletVisible && filesExplorerFocus && !inputFocus"
            ]
        },
        {
            "before": [
                "leader",
                "w",
                "h"
            ],
            "commands": [
                "workbench.action.navigateLeft"
            ],
            "when": [
                "explorerViewletVisible && filesExplorerFocus && !inputFocus"
            ]
        },
        {
            "before": [
                "leader",
                "w",
                "k"
            ],
            "commands": [
                "workbench.action.navigateUp"
            ],
            "when": [
                "explorerViewletVisible && filesExplorerFocus && !inputFocus"
            ]
        },
        {
            "before": [
                "leader",
                "w",
                "j"
            ],
            "commands": [
                "workbench.action.navigateDown"
            ],
            "when": [
                "explorerViewletVisible && filesExplorerFocus && !inputFocus"
            ]
        },
        {
            "before": [
                "leader",
                "`"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "leader",
                "g",
                "i"
            ],
            "commands": [
                {
                    "command": "editor.action.goToImplementation",
                }
            ]
        },
        // show help
        {
            "before": [
                "leader",
                "g",
                "h"
            ],
            "after": [
                "g",
                "h"
            ]
        },
        {
            "before": [
                "leader",
                "r",
                "n"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                ";"
            ],
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        {
            "before": [
                "leader",
                "p"
            ],
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        {
            "before": [
                "leader",
                "z"
            ],
            "commands": [
                "workbench.action.toggleEditorWidths",
            ]
        },
        {
            "before": [
                "leader",
                "s",
                "i"
            ],
            "commands": [
                "workbench.action.gotoSymbol",
            ]
        },
        // next error or warning
        {
            "before": [
                "leader",
                "e",
                "n"
            ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        // prev error or warning
        {
            "before": [
                "leader",
                "e",
                "p"
            ],
            "commands": [
                "editor.action.marker.prevInFiles"
            ]
        },
        {
            "before": [
                "leader",
                "leader"
            ],
            "commands": [
                ":nohl",
            ]
        },
        {
            "before": [
                "leader",
                "d",
                "d"
            ],
            "commands": [
                "errorLens.toggle"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p"
            ],
            "commands": [
                "editor.action.clipboardPasteAction"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    "window.zoomLevel": 1,
    "editor.stickyScroll.enabled": true,
    "editor.fontSize": 14,
    "editor.lineNumbers": "relative",
    "editor.formatOnSave": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.scrollBeyondLastLine": false,
    "editor.rulers": [
        100
    ], // 100 character limit
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.inlineSuggest.enabled": true,
    "editor.hover.enabled": true,
    "editor.hover.delay": 200,
    "editor.renderWhitespace": "none",
    "editor.autoClosingBrackets": "always",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-_",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "comment.line",
                    "comment.block",
                    "comment.block.documentation",
                    "string.quoted.docstring.multi.python",
                    "punctuation.definition.comment",
                    "punctuation.definition.comment.begin.documentation",
                    "punctuation.definition.comment.end.documentation",
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#808080",
                }
            },
        ]
    },
    // --- Python ---
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "--max-complexity=12"
    ],
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    // --- Go ---
    "go.useLanguageServer": true,
    "gopls": {
        "ui.semanticTokens": true,
        "formatting.gofumpt": true,
        "formatting.local": "iam",
        "ui.navigation.importShortcut": "Definition",
        "ui.documentation.hoverKind": "NoDocumentation",
        "ui.completion.usePlaceholders": true,
    },
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.testFlags": [
        "-mod=vendor",
        "-gcflags=all=-l",
        "-covermode=count",
    ],
    "go.coverageDecorator": {
        "type": "gutter",
        "coveredGutterStyle": "blockgreen",
        "uncoveredGutterStyle": "blockred"
    },
    "go.coverOnSingleTest": true,
    "go.toolsManagement.autoUpdate": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        ".idea": true,
        ".vscode": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "node_modules/": true,
        "templates_module/": true,
        "**/.project": true,
        ".mypy_cache/": true,
        "**/.coverage": true,
    },
    // ## Extension: scrolloff
    "scrolloff.scrolloff": 7,
    // ## Extension: errorLens
    "errorLens.statusBarColorsEnabled": true,
    "errorLens.margin": "6ch",
    "errorLens.fontWeight": "100",
    "errorLens.fontStyleItalic": true,
    "errorLens.fontSize": "13",
    "errorLens.followCursor": "closestProblem",
    "errorLens.gutterIconsEnabled": true,
    "errorLens.excludeBySource": [
        "cSpell"
    ],
    // not show in real
    "errorLens.onSave": true,
    // ## Extension: better-comments
    "better-comments.multilineComments": false,
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "workbench.colorTheme": "Vim Dark Hard",
    "workbench.editor.highlightModifiedTabs": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.scrollback": 20000,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.gpuAcceleration": "on",
    "breadcrumbs.enabled": true,
    "explorer.compactFolders": false,
    "errorLens.enabled": false,
    "window.menuBarVisibility": "toggle",
    // ## Extension: Settings Cycler
    "settings.cycle": [
        {
            "id": "copilot",
            "overrideWorkspaceSettings": true,
            "values": [
                {
                    "github.copilot.inlineSuggest.enable": false
                },
                {
                    "github.copilot.inlineSuggest.enable": true
                }
            ]
        }
    ],
    "github.copilot.inlineSuggest.enable": false,
    // "github.copilot.inlineSuggest.enable": false
}