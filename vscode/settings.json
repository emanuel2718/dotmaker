{
  // VIM settings
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.timeout": 200,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.easymotion": true,
  "vim.handleKeys": {
    "<C-n>": true
  },

  "vim.normalModeKeyBindings": [
    {
      "before": ["leader", "f", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "."],
      "commands": ["workbench.action.quickOpen"]
    },

    // Window handling keybinds
    {
      "before": ["leader", "w", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "w", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["leader", "w", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["leader", "w", "l"],
      "commands": ["workbench.action.navigateRight"],
      "when": ["explorerViewletVisible && filesExplorerFocus && !inputFocus"]
    },
    {
      "before": ["leader", "w", "h"],
      "commands": ["workbench.action.navigateLeft"],
      "when": ["explorerViewletVisible && filesExplorerFocus && !inputFocus"]
    },
    {
      "before": ["leader", "w", "k"],
      "commands": ["workbench.action.navigateUp"],
      "when": ["explorerViewletVisible && filesExplorerFocus && !inputFocus"]
    },
    {
      "before": ["leader", "w", "j"],
      "commands": ["workbench.action.navigateDown"],
      "when": ["explorerViewletVisible && filesExplorerFocus && !inputFocus"]
    },
    {
      "before": ["leader", "`"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<Leader>", "a"],
      "commands": ["editor.action.quickFix"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["p"],
      "commands": ["editor.action.clipboardPasteAction"]
    }
  ],

  // General settings
  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",
  "editor.codeLens": false,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.hover.enabled": true,
  "editor.hover.delay": 200,
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.renderLineHighlight": "all",
  "breadcrumbs.enabled": false,
  "explorer.compactFolders": false,
  "editor.autoClosingBrackets": "always",
  "workbench.sideBar.location": "right",
  // "workbench.editor.showTabs": false,

  // use vim keys to navigate folders
  "workbench.list.keyboardNavigation": "simple",
  "workbench.list.automaticKeyboardNavigation": false,
  "vim.statusBarColors.insert": "#333",
  "vim.statusBarColors.normal": "#282922",

  // Font settings
  "editor.fontSize": 16,
  "editor.fontWeight": "500",

  // Terminal Settings
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.gpuAcceleration": "on",

  // Black colorscheme
  // "workbench.colorCustomizations": {
  //   "terminal.foreground": "#cccccc",
  //   "terminal.background": "#070808",

  //   "quickInput.background": "#1d2021",
  //   "quickInputList.focusBackground": "#070808",

  //   "editor.background": "#070808",
  //   "sideBar.background": "#070808",
  //   "tab.activeBackground": "#070808",
  //   "statusBar.background": "#070808",
  //   "activityBar.background": "#070808",

  //   "editorLineNumber.activeForeground": "#cccccc"
  // },

  "window.title": "${folderName}/${activeEditorShort}",
  "workbench.iconTheme": "material-icon-theme",
  // "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.tree.renderIndentGuides": "none",

  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    // "**/node_modules": true,
    "**/package-lock.json": true,
    // Hide js files after running tsc.
    // "**/*.js": { "when": "$(basename).ts" },
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    // "**/node_modules/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",
  "window.zoomLevel": -1,
  // Remove annoying underlines
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "*.mutable": {
        "underline": false
      }
    }
  }
}
